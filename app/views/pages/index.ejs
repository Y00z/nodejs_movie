<%- include ../includes/header %>
<div class="container">
    <div class="row">
        <% categorys.forEach(function (cat, index) { %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>
                    <a href="/results?cat=<%= cat._id %>&p=0"><%= cat.name %></a>
                </h3>
            </div>

            <div class="panel-body">
                <% if(cat.movie && cat.movie.length > 0){ %>
                <% cat.movie.forEach(function (item, index) { %>
                <div class="col-md-2">
                    <div class="thumbnail">
                        <a href="./movie/<%= item._id %>"></a>
                        <% if(item.poster.indexOf('http') > -1){ %>
                        <img src="<%= item.poster %>" alt="item.title"/>
                        <% } else{ %>
                        <img src="/upload/<%= item.poster %>" alt="<%=item.title%>"/>
                        <% } %>
                    </div>
                    <div class="caption">
                        <h3><%= item.title %></h3>
                        <p>
                            <a class="btn btn-primary" href="/movie/<%= item._id %>" role="button">观看预告片</a>
                        </p>
                    </div>
                </div>
                <% }) %>
                <% } %>
            </div>
        </div>
        <% }) %>
    </div>
</div>