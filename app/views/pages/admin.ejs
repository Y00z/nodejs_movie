<%- include ../includes/header %>
<div class="container">
    <div class="row">
        <form action="/admin/movie/new" method="post" class="form-horizontal" enctype='multipart/form-data'>

            <div class="form-group">
                <label for="douban" class="col-sm-2 control-label">豆瓣同步</label>
                <div class="col-sm-10">
                    <input type="text" id="douban" class="form-control">
                </div>
            </div>

            <% if(movie._id){ %>
            <input type="hidden" name="movie[_id]" value="<%= movie._id %>">
            <% } %>

            <div class="form-group">
                <label class="col-sm-2 control-label">分类选择</label>
                <div class="col-sm-10">
                    <% categorys.forEach(function(category, index){ %>
                    <label class="radio-inline">
                        <% if(movie.category){ %>
                            <input type="radio" <%= category._id.toString == movie.category.toString ? "checked" : "" %>
                                   name="movie[category]" value="<%= category._id %>"/>
                            <%= category.name %>
                        <% }else{ %>
                            <input type="radio" name="movie[category]" value="<%= category._id %>"/>
                            <%= category.name %>
                        <% } %>
                    </label>
                    <% }) %>
                </div>
            </div>

            <div class="form-group">
                <label for="inputTitle" class="col-sm-2 control-label">电影名字</label>
                <div class="col-sm-10">
                    <input type="text" id="inputTitle" class="form-control" name="movie[title]"
                           value="<%= movie.title %>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputDirector" class="col-sm-2 control-label">电影导演</label>
                <div class="col-sm-10">
                    <input type="text" id="inputDirector" class="form-control" name="movie[director]"
                           value="<%= movie.director %>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputCountrie" class="col-sm-2 control-label">国家</label>
                <div class="col-sm-10">
                    <input type="text" id="inputCountrie" class="form-control" name="movie[countrie]"
                           value="<%= movie.countrie %>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputLanguage" class="col-sm-2 control-label">语言</label>
                <div class="col-sm-10">
                    <input type="text" id="inputLanguage" class="form-control" name="movie[language]"
                           value="<%= movie.language %>">
                </div>
            </div>

            <div class="form-group">
                <label for="inputPoster" class="col-sm-2 control-label">海报地址</label>
                <div class="col-sm-10">
                    <input type="text" id="inputPoster" class="form-control" name="movie[poster]"
                           value="<%= movie.poster %>">
                </div>
            </div>

            <div class="form-group">
                <label for="uploadPoster" class="col-sm-2 control-label">海报上传</label>
                <div class="col-sm-10">
                    <input type="file" id="uploadPoster" name="uploadPoster">
                </div>
            </div>

            <div class="form-group">
                <label for="inputFlash" class="col-sm-2 control-label">片源地址</label>
                <div class="col-sm-10">
                    <input type="text" id="inputFlash" class="form-control" name="movie[flash]"
                           value="<%= movie.flash %>">
                </div>
            </div>

            <div class="form-group">
                <label for="inputYear" class="col-sm-2 control-label">上映年份</label>
                <div class="col-sm-10">
                    <input type="text" id="inputYear" class="form-control" name="movie[year]" value="<%= movie.year %>">
                </div>
            </div>
            <div class="form-group">
                <label for="inputDescript" class="col-sm-2 control-label">简介</label>
                <div class="col-sm-10">
                    <textarea id="inputDescript" class="form-control"
                              name="movie[descript]"><%= movie.descript %></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-2 col-sm-offset-2">
                    <input type="submit" class="form-control" value="录入">
                </div>
            </div>
        </form>
    </div>
</div>
<script src="/js/admin.js"></script>
<%- include ../includes/footer %>
